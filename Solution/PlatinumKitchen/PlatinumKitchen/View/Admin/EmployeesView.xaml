<Page
    x:Class="PlatinumKitchen.View.Admin.EmployeesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:PlatinumKitchen.View.Admin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EmployeesView"
    d:DesignHeight="720"
    d:DesignWidth="1080"
    Background="GhostWhite"
    mc:Ignorable="d">


    <Grid>

        <Grid Grid.Column="1" Margin="30,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>


            <!--  Page Title  -->
            <TextBlock
                Grid.Row="1"
                Margin="0,20,0,0"
                HorizontalAlignment="Left"
                FontSize="32"
                FontWeight="SemiBold"
                Foreground="#121518"
                Text="Employees" />

            <!--  Add Button  -->
            <Button
                Command="{Binding AddNew}"
                Cursor="Hand"
                Style="{StaticResource addButton}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage
                        Width="11"
                        Height="11"
                        Margin="0,1,8,0"
                        VerticalAlignment="Center"
                        Foreground="white"
                        Icon="Plus" />
                    <TextBlock Text="Add New Member" />
                </StackPanel>
            </Button>
            <Button
                Grid.RowSpan="2"
                Width="131"
                Margin="0,24,155,4"
                Background="Green"
                Command="{Binding Change}"
                Cursor="Hand"
                Style="{StaticResource addButton}">
                <StackPanel Orientation="Horizontal">
                    <fa:IconImage
                        Width="11"
                        Height="11"
                        Margin="0,1,8,0"
                        VerticalAlignment="Center"
                        Foreground="white"
                        Icon="Refresh" />
                    <TextBlock Text="Save Changes" />
                </StackPanel>
            </Button>

            <!--  Seprator  -->
            <Separator
                Grid.Row="3"
                Height="1"
                Margin="0,-1,0,10"
                Background="#DAE2EA" />



            <TextBlock
                Grid.Row="4"
                Margin="0,0,215,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="#121518"
                Text="Search" />

            <!--  Filter Textbox  -->
            <Grid
                Grid.Row="4"
                Width="200"
                HorizontalAlignment="Right">
                <TextBlock
                    Margin="15,0"
                    VerticalAlignment="Center"
                    Panel.ZIndex="1"
                    Foreground="black"
                    IsHitTestVisible="False"
                    Text="" />

                <TextBox
                    x:Name="textBoxFilter"
                    Style="{StaticResource filterTextBox}"
                    Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <!--  Members Data Grid  -->
            <DataGrid
                x:Name="membersDataGrid"
                CellStyle="{DynamicResource DataGridCellStyle1}"
                ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                RowStyle="{DynamicResource DataGridRowStyle1}"
                Style="{DynamicResource DataGridStyle1}">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn
                        Width="auto"
                        CanUserResize="False"
                        ElementStyle="{StaticResource CheckBoxStyle1}"
                        Header="C">
                        <DataGridCheckBoxColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource CheckBoxStyle1}" />
                            </DataTemplate>
                        </DataGridCheckBoxColumn.HeaderTemplate>
                    </DataGridCheckBoxColumn>
                    <DataGridTextColumn
                        Width="auto"
                        Binding="{Binding Id}"
                        CanUserResize="False"
                        Header="#"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding First_Name}"
                        Header="First Name"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Last_Name}"
                        Header="Last Name"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Login}"
                        Header="Login"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Password}"
                        Header="Password"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Email}"
                        Header="Email"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        x:Name="Phone_Number"
                        Width="*"
                        Binding="{Binding Phone_Number}"
                        Header="Phone Number"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        x:Name="Position"
                        Width="*"
                        Binding="{Binding Position}"
                        Header="Position"
                        IsReadOnly="False" />
                    <DataGridTextColumn
                        x:Name="Salary"
                        Width="*"
                        Binding="{Binding Salary}"
                        Header="Salary"
                        IsReadOnly="False" />
                    <DataGridTemplateColumn
                        Width="auto"
                        Header="Operations"
                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        Margin="5,0,0,0"
                                        Command="{Binding DataContext.Remove, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding Id}"
                                        Cursor="Hand"
                                        Style="{StaticResource gridRemoveButton}">
                                        <fa:IconImage Icon="Remove" Style="{StaticResource gridButtonIcon}" />
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
